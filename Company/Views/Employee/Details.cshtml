@model Employee
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4">Employee Data</h1>
        </div>
    </div>
    <!-- Your employee data content can go here -->
</div>
<div class="card text-center">
    <div class="card-header">
        Employee Details
    </div>
    <div class="card-body">
        <h5 class="card-title"> @Model.Name</h5>
        <p class="card-text">
            <strong>Age:</strong> @Model.Age<br>
            <strong>Address:</strong> @Model.Address<br>
            <strong>Salary:</strong> @Model.Salary<br>
            <strong>Email:</strong> @Model.Email<br>
          
            @if (Model.Office_id > 0)
            {
                <strong>Office:</strong>  @Model.office.Name<br>
            }
        </p>
        <a href="/Employee/index" class="btn btn-primary">Back To List</a>
    </div>
    <div class="card-footer text-body-secondary">
       
    </div>
</div>
